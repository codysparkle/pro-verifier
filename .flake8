[flake8]
# Configuration for flake8
max-line-length = 88
select = E,W,F,C,B,I
ignore =
    E203,
    W503,
    E501,
    D100,
    D101,
    D102,
    D103,
    D104

exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    .tox,
    .mypy_cache,
    .pytest_cache,
    reports/

max-complexity = 10
per-file-ignores =
    __init__.py:F401
    tests/*:D
    */migrations/*:D
